# .env.example - copy to .env and fill values before deploying

# MongoDB connection string (use Railway MongoDB addon or Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/roomhy?retryWrites=true&w=majority

# Session and JWT secrets
SESSION_SECRET=replace-with-strong-random-string
JWT_SECRET=replace-with-strong-random-string

# Server
PORT=3000
NODE_ENV=production

# Email (optional)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your-email@example.com
EMAIL_PASS=your-email-password

# Any other service keys your app requires
# EXAMPLE_API_KEY=your_api_key_here
